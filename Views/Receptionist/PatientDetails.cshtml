@model ClinicalManagementSystem2025.Models.Patient
@{
    ViewData["Title"] = "Patient Details";
    var appointments = ViewBag.Appointments as IEnumerable<Appointment>;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-olive">
            <i class="fas fa-user me-2"></i>Patient Details
        </h1>
        <div>
            <a asp-action="ScheduleAppointment" asp-route-patientId="@Model.PatientId" class="btn btn-olive me-2">
                <i class="fas fa-calendar-plus me-1"></i>Schedule Appointment
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Patient Information -->
        <div class="col-md-6">
            <div class="card shadow-sm border-olive">
                <div class="card-header bg-olive text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Patient Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Patient ID</label>
                                <p class="form-control-plaintext">@Model.PatientId</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Status</label>
                                <p>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Full Name</label>
                                <p class="form-control-plaintext">@Model.FullName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Age</label>
                                <p class="form-control-plaintext">@Model.Age years</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Phone Number</label>
                                <p class="form-control-plaintext">@Model.Phone</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email</label>
                                <p class="form-control-plaintext">@(Model.Email ?? "Not provided")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Date of Birth</label>
                                <p class="form-control-plaintext">@Model.DateOfBirth.ToString("MMM dd, yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Gender</label>
                                <p class="form-control-plaintext">@(Model.Gender ?? "Not specified")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Blood Group</label>
                                <p class="form-control-plaintext">@(Model.BloodGroup ?? "Not specified")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Emergency Contact</label>
                                <p class="form-control-plaintext">@(Model.EmergencyContact ?? "Not provided")</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Address</label>
                        <p class="form-control-plaintext">@(Model.Address ?? "Not provided")</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Registered Date</label>
                                <p class="form-control-plaintext">@Model.RegistrationDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="EditPatient" asp-route-id="@Model.PatientId" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-edit me-1"></i>Edit Patient
                        </a>
                        <a asp-action="ScheduleAppointment" asp-route-patientId="@Model.PatientId" class="btn btn-olive">
                            <i class="fas fa-calendar-plus me-1"></i>Schedule Appointment
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Appointment History -->
        <div class="col-md-6">
            <div class="card shadow-sm border-olive">
                <div class="card-header bg-olive text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history me-2"></i>Appointment History
                    </h5>
                </div>
                <div class="card-body">
                    @if (appointments?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>Doctor</th>
                                        <th>Status</th>
                                        <th>Reason</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in appointments)
                                    {
                                        <tr>
                                            <td>
                                                @appointment.AppointmentDate.ToString("MMM dd, yyyy")
                                                <br>
                                                <small class="text-muted">@appointment.AppointmentDate.ToString("hh:mm tt")</small>
                                            </td>
                                            <td>@appointment.DoctorName</td>
                                            <td>
                                                <span class="badge @(appointment.Status == "Scheduled" ? "bg-primary" :
                                                                                                                                                                          appointment.Status == "Completed" ? "bg-success" :
                                                                                                                                                                          appointment.Status == "Cancelled" ? "bg-danger" : "bg-warning")">
                                            @appointment.Status
                                        </span>
                                    </td>
                                    <td>@appointment.Reason</td>
                                </tr>
                                                                }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No appointments found</h5>
                            <p class="text-muted">This patient has no appointment history.</p>
                            <a asp-action="ScheduleAppointment" asp-route-patientId="@Model.PatientId" class="btn btn-olive">
                                <i class="fas fa-calendar-plus me-1"></i>Schedule First Appointment
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-olive">
                <div class="card-header bg-olive text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            <a asp-action="ScheduleAppointment" asp-route-patientId="@Model.PatientId" class="btn btn-olive btn-lg w-100 mb-2">
                                <i class="fas fa-calendar-plus fa-2x mb-2"></i><br>
                                Schedule Appointment
                            </a>
                        </div>
                        <div class="col-md-3 text-center">
                            <button class="btn btn-outline-olive btn-lg w-100 mb-2">
                                <i class="fas fa-file-medical fa-2x mb-2"></i><br>
                                Medical Records
                            </button>
                        </div>
                        <div class="col-md-3 text-center">
                            <button class="btn btn-outline-olive btn-lg w-100 mb-2">
                                <i class="fas fa-prescription fa-2x mb-2"></i><br>
                                Prescriptions
                            </button>
                        </div>
                        <div class="col-md-3 text-center">
                            <button class="btn btn-outline-olive btn-lg w-100 mb-2">
                                <i class="fas fa-notes-medical fa-2x mb-2"></i><br>
                                Medical Notes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script>
}