@model IEnumerable<ClinicalManagementSystem2025.Models.User>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-olive">
            <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
        </h1>
        <a asp-action="AddUser" class="btn btn-olive">
            <i class="fas fa-user-plus me-2"></i>Add New User
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-olive">
                <div class="card-body text-center">
                    <h5 class="card-title text-olive"><i class="fas fa-users me-2"></i>Total Users</h5>
                    <h3 class="text-olive">@Model.Count()</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-olive">
                <div class="card-body text-center">
                    <h5 class="card-title text-olive"><i class="fas fa-user-md me-2"></i>Doctors</h5>
                    <h3 class="text-olive">@Model.Count(u => u.Role?.RoleName == "Doctor")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-olive">
                <div class="card-body text-center">
                    <h5 class="card-title text-olive"><i class="fas fa-user-nurse me-2"></i>Staff</h5>
                    <h3 class="text-olive">@Model.Count(u => u.Role?.RoleName != "Doctor" && u.Role?.RoleName != "Admin")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-olive">
                <div class="card-body text-center">
                    <h5 class="card-title text-olive"><i class="fas fa-shield-alt me-2"></i>Admins</h5>
                    <h3 class="text-olive">@Model.Count(u => u.Role?.RoleName == "Admin")</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-olive text-white d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>All Users
            </h5>
            <span class="badge bg-light text-olive">@Model.Count() users</span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="bg-olive text-white">
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Created Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td>
                                    <strong>@user.UserName</strong>
                                </td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@user.Phone</td>
                                <td>
                                    <span class="badge bg-olive">@user.Role?.RoleName</span>
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>@user.CreatedDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-outline-olive" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <!-- Status Toggle Button -->
                                        <form asp-action="ToggleUserStatus" asp-route-id="@user.UserId" method="post" class="d-inline">
                                            <button type="submit" class="btn @(user.IsActive ? "btn-outline-warning" : "btn-outline-success")"
                                                    title="@(user.IsActive ? "Deactivate" : "Activate")">
                                                <i class="fas @(user.IsActive ? "fa-user-slash" : "fa-user-check")"></i>
                                            </button>
                                        </form>

                                        <!-- Reset Password Button -->
                                        <button type="button" class="btn btn-outline-info" title="Reset Password"
                                                data-bs-toggle="modal" data-bs-target="#resetPasswordModal"
                                                data-userid="@user.UserId" data-username="@user.UserName">
                                            <i class="fas fa-key"></i>
                                        </button>

                                        <!-- Delete Button -->
                                        <button type="button" class="btn btn-outline-danger" title="Delete"
                                                data-bs-toggle="modal" data-bs-target="#deleteUserModal"
                                                data-userid="@user.UserId" data-username="@user.UserName">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Reset Password Modal -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1" aria-labelledby="resetPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-olive text-white">
                <h5 class="modal-title" id="resetPasswordModalLabel">
                    <i class="fas fa-key me-2"></i>Reset Password
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="resetPasswordForm" method="post">
                <div class="modal-body">
                    <input type="hidden" id="resetUserId" name="id">
                    <p>Reset password for user: <strong id="resetUserName"></strong></p>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">New Password</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" required>
                        <div class="invalid-feedback" id="passwordError">Passwords do not match</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-olive">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete User Modal -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteUserModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="deleteUserForm" method="post">
                <div class="modal-body">
                    <input type="hidden" id="deleteUserId" name="id">
                    <p>Are you sure you want to delete user: <strong id="deleteUserName"></strong>?</p>
                    <p class="text-danger"><small>This action cannot be undone. The user will be deactivated.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete User</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Reset Password Modal
        $('#resetPasswordModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var userId = button.data('userid');
            var userName = button.data('username');

            var modal = $(this);
            modal.find('#resetUserId').val(userId);
            modal.find('#resetUserName').text(userName);
            modal.find('#resetPasswordForm').attr('action', '/Admin/ResetPassword');
        });

        // Delete User Modal
        $('#deleteUserModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var userId = button.data('userid');
            var userName = button.data('username');

            var modal = $(this);
            modal.find('#deleteUserId').val(userId);
            modal.find('#deleteUserName').text(userName);
            modal.find('#deleteUserForm').attr('action', '/Admin/DeleteUser');
        });

        // Password confirmation validation
        $('#confirmPassword').on('keyup', function () {
            var password = $('#newPassword').val();
            var confirmPassword = $(this).val();

            if (password !== confirmPassword) {
                $(this).addClass('is-invalid');
                $('#passwordError').show();
            } else {
                $(this).removeClass('is-invalid');
                $('#passwordError').hide();
            }
        });

        // Form submission validation
        $('#resetPasswordForm').on('submit', function (e) {
            var password = $('#newPassword').val();
            var confirmPassword = $('#confirmPassword').val();

            if (password !== confirmPassword) {
                e.preventDefault();
                $('#confirmPassword').addClass('is-invalid');
                $('#passwordError').show();
            }
        });

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script>
}